{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "strict": true,
    "jsx": "react",
    "baseUrl": "./src"
  },
  "exclude": [
    "node_modules"
  ]
}
